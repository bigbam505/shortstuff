<% if @errors %>
<ul>
  <% @errors.each do |attribute, error|%>
    <li><%= attribute %> - <%= error %></li>
  <% end %>
</ul>
<% end %>
<%= form_tag short_urls_path do |form| %>
  <%= label_tag :url %>
  <%= text_field_tag :url %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Create'%>
<% end %>
